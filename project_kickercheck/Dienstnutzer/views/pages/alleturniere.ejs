<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body class="container">
    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
            
                <div class="jumbotron">
                    <h1>Liste aller Turniere</h1>
                   
        <br />
        
        <div class="list-group">
        <% turniere.forEach(function(turnier) { %>
	  <a href="/Turnier/<%= turnier.id %>" class="list-group-item"> <h4 class="list-group-item-heading"><%= turnier.Typ %></h4>
	   <p class="list-group-item-text">Austragungszeitraum: <%= turnier.Austragungszeitraum %></p>
	   <p class="list-group-item-text">Status: <%= turnier.Status %></p>
	    </a>
   <% }); %>
</div>
      
                </div>
                
            </div>
           
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>