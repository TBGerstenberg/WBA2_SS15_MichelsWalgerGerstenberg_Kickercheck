<div class="row">
    <!--Anzeige fÃ¼r die Ligatabelle-->
    <table class="table">
        <thead>
            <tr>
                <th>Team</th>
                <th>Punkte</th>
            </tr>
        </thead>
        
        <!--Check ob es sich um ein zwei Spieler Turnier handelt -->
        <% if (ligatabelle.Teams[0].Teilnehmer.hasOwnProperty('Teilnehmer2')) { %>
        <tbody id="ligatabelle">
            <% if(ligatabelle) { %>
            <% for(var i=0; i < ligatabelle.Teams.length ; i++) { %>
            <tr>
                <td><%= ligatabelle.Teams[i].teamName %><a href="<%= ligatabelle.Teams[i].Teilnehmer.Teilnehmer1 %>"> Spieler1</a>  <a href="<%= ligatabelle.Teams[i].Teilnehmer.Teilnehmer2 %>">Spieler2 </a></td>
                <td><%= ligatabelle.Teams[i].Punkte %></td>
            </tr>
            <% }; %>
            <% } %>
        </tbody>
        <!--Jedes Team hat einen Spieler-->
        <%} else{%>
        <tbody id="ligatabelle">
            <% if(ligatabelle) { %>
            <% for(var i=0; i < ligatabelle.Teams.length ; i++) { %>
            <tr>
                <td><%= ligatabelle.Teams[i].teamName %>  <a href="<%= ligatabelle.Teams[i].Teilnehmer.Teilnehmer1%>">Spieler</a></td>
                <td><%= ligatabelle.Teams[i].Punkte %></td>
            </tr>
            <% }; %>
            <% } %>
        </tbody>
        <% } %>
    </table>
</div>