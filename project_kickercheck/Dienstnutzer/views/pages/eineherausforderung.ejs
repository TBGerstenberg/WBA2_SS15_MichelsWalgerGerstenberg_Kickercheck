<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>

    <body class="container">
        <header>
            <% include ../partials/header %>
        </header>
        <main>
            <div class="row">
                <div class="col-sm-12">

                    
                    <div class="jumbotron">
                        <h1>Herausforderung <%= HerausforderungDaten.id %></h1>
                        <br />
                        <ul>
                             <li>Herausgeforderter: <span id="Name"> <% benutzerAll.forEach(function(benutzer) { %>
                                 <% if("/Benutzer/"+benutzer.id == HerausforderungDaten.Herausgeforderter) { %><a href="<%= HerausforderungDaten.Herausgeforderter%>"><%= benutzer.Name %></a><% } }); %></span></li>
                            <li>Herausforderer: <span id="Name"> <% benutzerAll.forEach(function(benutzer) { %>
                                <% if("/Benutzer/"+benutzer.id == HerausforderungDaten.Herausforderer) { %><a href="<%= HerausforderungDaten.Herausforderer%>"><%= benutzer.Name %></a><% } }); %></span></li>
                            <li>Austragungsort: <span id="Ort"><% austragungsorte.forEach(function(ort) { %>
                                <% if("/Austragungsort/"+ort.id == HerausforderungDaten.Austragungsort) { %><a href="<%= HerausforderungDaten.Austragungsort %>"><%= ort.Name %></a><% } }); %></span></li>
                            <li>Datum: <span id="Datum"><%= HerausforderungDaten.Datum %></span></li>
                            <li>Text: <span id="Text"><%=HerausforderungDaten.Kurztext %></span></li>
                        </ul> 
                        <br />
                        <hr />
                    </div>
                </div>

            </div>
        </main>
        <footer>
            <% include ../partials/footer %>
        </footer>

    </body>
</html>