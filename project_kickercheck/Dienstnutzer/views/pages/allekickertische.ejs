<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>

<body class="container">
    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
            
                <div class="jumbotron">
                    <h1>Liste aller Kickertische von <%= ort.Name %></h1>
                   
        <br />
        
        <div class="list-group">
       
        <% kickertische.forEach(function(kickertisch) { %>
	  <a href="<%= kickertisch.id %>" class="list-group-item"> <h4 class="list-group-item-heading"><%= kickertisch.Typ %></h4>
	  <p class="list-group-item-text">Hersteller: <%= kickertisch.Hersteller %></p>
	    <p class="list-group-item-text">Zustand: <%= kickertisch.Zustand %></p>
	    </a>
   <% });  %>
</div>
      
                </div>
                
            </div>
           
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>