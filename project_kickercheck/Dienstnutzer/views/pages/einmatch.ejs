                    //                            return false;
                    //                        }

                    //                        if(value2 >= 7 || spielstand1 == 6) {
                    //                            alert('Regelwidriges Verhalten.');
                    //                            return false;
                    //                        }

                    if(stdModus == 'Variation') {							

