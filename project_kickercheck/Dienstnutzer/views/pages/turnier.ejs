<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body class="container">
<script type="text/javascript">
			$(document).ready(function(){
					
				$('#turnierAnlegen').submit(function(e) {
							e.preventDefault();
							$('.addid').html('');
							var teilnehmer = $('#teilnehmer').val();
							var teamgroesse = $('#teamgroesse').val();
							var typ = $('#typ').val();
							
							if(!(teilnehmer && teamgroesse && typ)) {
								alert('Bitte Felder ausf√ºllen');
								return false;
								}
							
						var formData = {Teilnehmeranzahl : teilnehmer,
						Teamgroesse : teamgroesse,
						Typ : typ}

							$.ajax({
								type: 'POST',
								contentType: 'application/json',
								url: '/Turnier/',
								
								data: JSON.stringify(formData),
								success: function(data) {
									 $('#turnierAnlegen').each(function() {
                        this.reset();
                    });
							$('#divteilnehmer').show();
							$('.addid').append('<a href="/Turnier/'+data.id+'">Turnier <span class="turnierId">'+data.id+'</span> angelegt</a>.');
									
								}
							});
			
						});
		
			});
		</script>
		
    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
            
                <div class="jumbotron">
                    <h1>Turnier</h1>
                   <form action="" method="POST" name="turnierAnlegen" id="turnierAnlegen">
        <label for="teilnehmer">Teilnehmer:</label> <br>
        <input type="text" id="teilnehmer" placeholder="Wie viele Spieler?" maxlength="100" /><br>
		 <label for="teamgroesse">Teamgroesse:</label> <br>
        <input type="text" id="teamgroesse" placeholder="Wie viele pro Team?" maxlength="100" /><br>
         <label for="typ">Art des Turniers:</label> <br>
        <input type="text" id="typ" placeholder="Art des Turniers" maxlength="100" /><br>
			<br />
        <input type="submit" name="send" value="Submit" />

        </form>
        <br />
        <p class="addid"></p>
                </div>
                
            </div>
           
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>