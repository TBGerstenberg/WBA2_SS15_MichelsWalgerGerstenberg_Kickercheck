 <!--Dokument ,welches das XML-Schema zur validierung von XML-basierten requests beinhaltet -->
 
 <xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:kickercheck="http://kickercheck/validation_namespace"
             targetNamespace="http://kickercheck/validation_namespace">

<!-- element declarations --> 

    <!-- Ressourcenelemente --> 
    
    <xsd:element name="Benutzer" type="kickercheck:BenutzerTyp"/>

    <xsd:element name="Turnier" type="kickercheck:TurnierTyp"/>

    <xsd:element name="Match" type="kickercheck:MatchTyp"/>

    <xsd:element name="Kickertisch" type="kickercheck:KickertischTyp"/> 

    <xsd:element name="Standort" type="kickercheck:StandortTyp"/>
    
    <xsd:element name="Forderung" type="kickercheck:ForderungTyp"/>
    
    
    
    
    <!-- subelements -->
    
    <!--Benutzerelement subelements -->
    
        <xsd:element name="Name" type=xsd:string/>

        <xsd:element name="Alter" type=xsd:integer/> 

        <xsd:element name="bevorzugte_Position" type="kickercheck:bevorzugte_PositionTyp"/>
    
        <xsd:element name="Profilbild" type="xsd:base64Binary"/>
    
    <!--Match subelements -->
    
        <xsd:element name="Datum" type="xsd:date"/>

        <xsd:element name="Uhrzeit" type="xsd:time"/>
        
    <!--Kickertisch subelements -->
    
        <xsd:element name="Tischhersteller" type="kickercheck:TischherstellerTyp"/>
        
        <xsd:element name="Modell" type="kickercheck:ModellTyp"/>
        
        <xsd:element name="Zustand" type="xsd:string"/> 
        
        


<!--type declarations-->

    <xsd:complexType name="kickercheck:BenutzerTyp">
        <all>
        <element ref="kickercheck:Name"/>
        <element ref="kickercheck:Alter"/>
        <element ref="kickercheck:bevorzugte_Position"/>
        <element ref="kickercheck:Profilbild"/>
        </all>
    </complexType> 
    
    <xsd:complexType name="kickercheck:TurnierTyp">
        <element ref="kickercheck:Standort"/>
        <element ref="Tischhersteller"/>
    </complexType> 

    <xsd:complexType name="kickercheck:MatchTyp">
        <element ref="kickercheck:Datum"/>
        <element ref="kickercheck:Uhrzeit"/>
        <element ref="kickercheck:Kickertisch"/>
    </complexType> 

    <xsd:complexType name="kickercheck:KickertischTyp">
        <element ref="kickercheck:Standort"/>
        <element ref="kickercheck:Tischhersteller"/>
        <element ref="kickercheck:Modell"/>
    </complexType> 
    
    <xsd:complexType name="kickercheck:TischherstellerTyp">
        <restriction base="xsd:string"/>
            <enumeration value="Heiku">
            <enumeration value="Fireball">
            <enumeration value="Leonhart">
            <enumeration value="Lettner">
            <enumeration value="Libero">
            <enumeration value="Tornado">
            <enumeration value="Ullrich">
            <enumeration value="P4P">
            <enumeration value="Tuniro">
            <enumeration value="Garlando">
            <enumeration value="Longoni">
        </restriction>
    </complexType>
    
    <xsd:complextType name="kickercheck:ModellTyp">
        <!-- Art des Tisches (regular,)-->
        
        
    </complexType>

    <xsd:complexType name="kickercheck:StandortTyp">

    </complexType> 
    
    <xsd complexType name="ForderungTyp">
        <element ref="kickercheck:Datum"/>
        <element ref="kickercheck:Uhrzeit"/>
    </complexType>
    
    <xsd:simpleType name="bevorzuge_PositionTyp">
        <restriction base="xsd:string">
            <enumeration value="Sturm"/>
            <enumeration value="Verteidigung"/>
        </restriction>
    </simpleType>
</schema>
